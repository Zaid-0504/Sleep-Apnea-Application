<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".sign_in_Fragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/email_image"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="5dp"
            android:src="@drawable/email_icon"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <EditText
            android:id="@+id/user_email"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/email_image"
            app:layout_constraintTop_toTopOf="parent"
            android:hint="Email"
            />
        <ImageView
            android:id="@+id/password_image"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="25dp"
            android:layout_marginStart="5dp"
            android:src="@drawable/password_icon"
            app:layout_constraintTop_toBottomOf="@id/email_image"
            app:layout_constraintStart_toStartOf="parent"/>

        <EditText
            android:id="@+id/user_password"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            app:layout_constraintStart_toEndOf="@id/password_image"
            app:layout_constraintTop_toBottomOf="@id/user_email"
            android:accessibilityDataSensitive="yes"
            android:hint="password"
            />
        <CheckBox
            android:id="@+id/remember_password"
            android:layout_width="125dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/user_password"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="5dp"
            android:layout_marginTop="15dp"
            android:textSize="18sp"
            android:fontFamily="@font/abhaya_libre"
            android:textColor="@color/Color_theme"
            android:text="Remember Password"/>
        <TextView
            android:id="@+id/forget_password"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@id/user_password"
            android:text="Forget Password"
            android:textColor="@color/Color_theme"
            android:fontFamily="@font/abhaya_libre"
            android:textSize="18sp"/>
        <Button
            android:id="@+id/login_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/remember_password"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="Login"
            android:layout_marginTop="20dp"
            android:backgroundTint="@color/Color_theme"
            android:fontFamily="@font/abhaya_libre"
            android:textSize="20sp"
            android:textStyle="bold"/>


    </androidx.constraintlayout.widget.ConstraintLayout>


</FrameLayout>